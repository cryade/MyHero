{
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "rules": {
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-var": [
            "off"
        ],
        "one-var": [
            "off"
        ],
        "no-console": 0,
        "max-len": ["error", { "ignoreComments": true,"code": 140 }],
        "no-underscore-dangle": ["error",{ "allow": ["_id"] }],
        "func-names": ["error", "as-needed"],
        "consistent-return": 0,
        "no-undef":0, //omitUndefined is not recognised by this rule therefore its turned off
        "eqeqeq":0
    }
}